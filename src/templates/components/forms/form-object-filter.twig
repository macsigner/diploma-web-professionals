<form id="main-real-estate-filter" {% if applyFilter %}data-filter{% endif %}>
    <label for="estate_type">Was</label>
    <select name="ref_type_id" id="ref_type_id" data-filter-type="filter">
        <option value="" selected>Alle Objekte</option>
    </select>
    <label for="canton">Wo</label>
    <select name="canton" id="canton">
        <option value="" selected>Alle Orte</option>
        <option value="appenzell">Appenzell</option>
        <option value="st.gallen">St.Gallen</option>
    </select>
    <label for="sorting">Wo</label>
    <select name="sorting" id="sortBy" data-filter-type="sort">
        <option value="" selected>Ausw√§hlen</option>
        <option value="priceAsc">Preis aufsteigend</option>
        <option value="priceDesc">Preis aufsteigend</option>
        <option value="dateAsc">Datum aufsteigend</option>
        <option value="dateDesc">Datum aufsteigend</option>
    </select>
    <fieldset class="switch">
        {# Todo: Semantics call for a radio button but it would be much easier with a checkbox #}
        <legend class="invisible">Filter Kaufen/Mieten</legend>
        <input type="radio" name="estate_type" id="estateTypeRent" value="zu vermieten" class="switch__input-first" checked data-filter-type="filter">
        <label for="estateTypeRent" class="switch__label switch__label--first">Mieten</label>
        <input type="radio" name="estate_type" id="estateTypeBuy" value="zu verkaufen" class="switch__input-last" data-filter-type="filter">
        <label for="estateTypeBuy" class="switch__label switch__label--last">Kaufen</label>
        <span class="switch__box">
            {# A little hacky but just for fun. Switch between radio buttons via CSS #}
            <label class="switch__box-label switch__box-label--first" for="estateTypeRent"></label>
            <label class="switch__box-label switch__box-label--last" for="estateTypeBuy"></label>
        </span>
    </fieldset>
    <fieldset>
        <legend>Ansicht:</legend>
        <label>
            <span class="invisible">Kachelansicht</span>
            <input type="radio" name="layout" value="layoutTile" checked data-filter-type="template">
        </label>
        <label>
            <span class="invisible">Listenansicht</span>
            <input type="radio" name="layout" value="layoutList" data-filter-type="template">
        </label>
    </fieldset>
    <button>Suchen</button>
</form>
